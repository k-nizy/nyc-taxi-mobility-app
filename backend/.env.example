# Database Configuration
# Option 1: Use SQLite (simple, no setup required)
USE_SQLITE=true
SQLITE_DB_PATH=nyc_taxi.db

# Option 2: Use PostgreSQL (production, better performance)
# Uncomment these and set USE_SQLITE=false to use PostgreSQL
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nyc_taxi_db
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py
# Generate a random secret key or use this default for development
# For production, generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=dev-secret-key-change-for-production-abc123xyz789

# Data Processing
DATA_URL=https://d37ci6vzurychx.cloudfront.net/trip-data/yellow_tripdata_2023-01.parquet
BATCH_SIZE=10000
